<Window x:Class="VeterinarniKlinika.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VeterinarniKlinika"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox ItemsSource="{Binding Animals}" DisplayMemberPath="Name" HorizontalAlignment="Center" VerticalAlignment="Top" Width="756" Height="376" Margin="0,4,0,0" RenderTransformOrigin="0.5,0.5">
            <ListBox.RenderTransform>
                <TransformGroup>
                </TransformGroup>
            </ListBox.RenderTransform>
        </ListBox>

        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom" Orientation="Horizontal" Margin="10">
            <Button Content="Add Animal" Command="{Binding AddAnimalCommand}" Width="80" Margin="5"/>
            <Button Content="Delete" Command="{Binding DeleteAnimalCommand}" Width="80" Margin="5"/>
            <Button Content="Update" Command="{Binding UpdateAnimalCommand}" Width="80" Margin="5"/>
            <Button Content="Visits" Command="{Binding VisitsAnimalCommand}" Width="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
