<Window x:Class="VeterinarniKlinika.View.AddAnimalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VeterinarniKlinika.View"
        mc:Ignorable="d"
        Title="AddAnimalWindow" Height="450" Width="800">
    <Grid>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="435" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TabControl Name="Tab1" Grid.ColumnSpan="2" Margin="38,0,23,0" >

            <TabItem Header="Animals">


            </TabItem>
            <TabItem Header="Visits">

            </TabItem>


        </TabControl>

        <Button Content="Add" Command="{Binding AddCommand}"  Width="80"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="23,370,0,0" Height="20"/>
        <Button Content="Delete" Command="{Binding DeleteCommand}"  Width="80"  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,370,37,0" Height="20"/>
        <Button Content="Update" Command="{Binding UpdateCommand}"  Width="80"  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,370,200,0" Height="20"/>


    </Grid>
</Window>
